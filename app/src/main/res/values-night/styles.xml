<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 设置对话框样式 - Material 3 (夜间模式) -->
    <style name="SettingsDialogStyle" parent="Theme.raLaunch">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- 运行时选择对话框样式 - Material 3 (夜间模式) -->
    <style name="RuntimeDialogStyle" parent="Theme.raLaunch">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- 控件编辑对话框样式 - Material 3 (夜间模式) -->
    <style name="ControlEditDialogStyle" parent="Theme.raLaunch">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <!-- 窗口宽度设置 -->
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- 添加游戏对话框样式 - Material 3 (夜间模式) -->
    <style name="AddGameDialogStyle" parent="Theme.raLaunch">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
</resources>

