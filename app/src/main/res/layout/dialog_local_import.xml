<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="?attr/backgroundCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题栏 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="本地导入"
                android:textColor="?attr/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="关闭"
                app:tint="?attr/textSecondary" />

        </RelativeLayout>

        <!-- 说明文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择游戏文件和ModLoader(可选)进行导入"
            android:textColor="?attr/textSecondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="2dp" />

        <!-- 游戏本体卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gameFileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/backgroundPrimary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- 图标 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/accent_primary">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_file"
                        app:tint="@android:color/white" />

                </com.google.android.material.card.MaterialCardView>

                <!-- 文本信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游戏本体"
                        android:textColor="?attr/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/gameFileText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terraria (.sh)"
                        android:textColor="?attr/textSecondary"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="middle"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- 选择按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectGameFileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="选择"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_folder"
                    app:iconSize="18dp"
                    app:iconPadding="4dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ModLoader卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/modLoaderCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/backgroundPrimary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- 图标 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/accent_secondary">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_zip"
                        app:tint="@android:color/white" />

                </com.google.android.material.card.MaterialCardView>

                <!-- 文本信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ModLoader"
                            android:textColor="?attr/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E0F7FA">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="可选"
                                android:textColor="#00695C"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/modLoaderFileText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="模组加载器 (.zip)"
                        android:textColor="?attr/textSecondary"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="middle"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- 选择按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectModLoaderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="选择"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_folder"
                    app:iconSize="18dp"
                    app:iconPadding="4dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 开始导入按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startImportButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="开始导入"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_download"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
