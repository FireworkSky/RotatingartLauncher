<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 主游戏内容区域的外层容器 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">
        
        <!-- 游戏内容区域（SDLSurface + ControlLayout） -->
        <FrameLayout
            android:id="@+id/game_content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- 游戏控制布局会动态添加到这里 -->

        </FrameLayout>
        
        <!-- 悬浮UI层 (确保在游戏内容之上) -->
        <FrameLayout
            android:id="@+id/game_overlay_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false">

            <!-- 悬浮菜单按钮 -->
            <ImageButton
                android:id="@+id/game_drawer_button"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal|top"
                android:padding="4dp"
                android:elevation="15dp"
                android:src="@android:drawable/arrow_down_float"
                android:background="@android:color/transparent"
                android:tint="?attr/textPrimary"
                android:contentDescription="游戏菜单"
                android:visibility="gone" />

            <!-- 编辑模式设置按钮（MD3 风格 FAB） -->
            <ImageView
                android:id="@+id/game_editor_settings_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:src="@drawable/ic_settings"
                android:background="@drawable/bg_fab_md3"
                android:clickable="true"
                android:focusable="true"
                android:elevation="30dp"
                android:contentDescription="编辑设置"
                android:visibility="gone" />

        </FrameLayout>
        
    </RelativeLayout>

    <!-- 右侧抽屉菜单 -->
    <ListView
        android:id="@+id/game_navigation_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#2D2D30"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:fitsSystemWindows="false"
        android:padding="0dp" />

</androidx.drawerlayout.widget.DrawerLayout>

