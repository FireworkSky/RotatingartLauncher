<?xml version="1.0" encoding="utf-8"?>
<!-- 错误对话框 - Material 3 现代化风格 -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface"
    style="@style/Widget.App.CardView.Standard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- 错误图标 -->
            <ImageView
                android:id="@+id/error_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_bug"
                android:tint="?attr/colorError"
                android:contentDescription="@string/error_icon_desc"
                android:layout_marginEnd="12dp" />

            <!-- 标题 -->
            <TextView
                android:id="@+id/error_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/error_title_default"
                android:textColor="?attr/textPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- 错误消息 -->
        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_message_default"
            android:textColor="?attr/textSecondary"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp" />

        <!-- 错误详情（可展开） -->
        <LinearLayout
            android:id="@+id/error_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- 详情标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error_details_title"
                android:textColor="?attr/textSecondary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 详情内容（可滚动） -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:background="?attr/colorSurfaceVariant"
                android:padding="12dp">

                <TextView
                    android:id="@+id/error_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="?attr/textPrimary"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="2dp" />

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <!-- 展开/折叠按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_toggle_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_show_details"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <!-- 按钮容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- 复制按钮（可选） -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_copy"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <!-- 确定按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

