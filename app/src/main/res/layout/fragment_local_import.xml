<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundPrimary"
    android:orientation="vertical">

    <!-- 顶部标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="返回"
            app:tint="?attr/textPrimary" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="正在导入游戏"
            android:textColor="?attr/textPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- 占位，保持标题居中 -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- 分隔线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- 占位元素 - 为了兼容代码中的 findViewById -->
    <TextView
        android:id="@+id/gameFileText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/modLoaderFileText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/selectGameFileButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/selectModLoaderButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/startImportButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- 导入进度区域 -->
    <LinearLayout
        android:id="@+id/importProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/backgroundPrimary"
        android:padding="32dp"
        android:visibility="visible">

        <com.app.ralib.ui.ModernProgressBar
            android:id="@+id/modernProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:progressColor="@color/accent_primary"
            app:showPercentage="true" />

    </LinearLayout>

</LinearLayout>
