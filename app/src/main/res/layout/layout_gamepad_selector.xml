<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- 第一行：主按钮 ABXY -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="3dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_y"
                style="@style/GamepadKey"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Y"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_x"
                style="@style/GamepadKey"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="X"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_b"
                style="@style/GamepadKey"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="B"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_a"
                style="@style/GamepadKey"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="A" />

        </LinearLayout>
    </FrameLayout>

    <!-- 第二行：肩键和扳机 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="3dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_lb"
                style="@style/GamepadKey"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:text="LB"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_rb"
                style="@style/GamepadKey"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:text="RB"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_lt"
                style="@style/GamepadKey"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:text="LT"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_rt"
                style="@style/GamepadKey"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:text="RT" />

        </LinearLayout>
    </FrameLayout>

    <!-- 第三行：摇杆 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="3dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_l3"
                style="@style/GamepadKey"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="L3"
                android:layout_marginEnd="8dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_r3"
                style="@style/GamepadKey"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="R3" />

        </LinearLayout>
    </FrameLayout>

    <!-- 第四行：十字键 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="3dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_dpad_up"
                style="@style/GamepadKey"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="↑"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_dpad_left"
                style="@style/GamepadKey"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="←"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_dpad_right"
                style="@style/GamepadKey"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="→"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_dpad_down"
                style="@style/GamepadKey"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="↓" />

        </LinearLayout>
    </FrameLayout>

    <!-- 第五行：系统按键 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="3dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_start"
                style="@style/GamepadKey"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:text="Start"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_back"
                style="@style/GamepadKey"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:text="Back"
                android:layout_marginEnd="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/gamepad_guide"
                style="@style/GamepadKey"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:text="Guide" />

        </LinearLayout>
    </FrameLayout>

</LinearLayout>
