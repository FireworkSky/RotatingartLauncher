<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- 主按钮 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="主按钮"
        android:textSize="14sp"
        android:textColor="#49454F"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_a"
            style="@style/GamepadKey"
            android:text="A" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_b"
            style="@style/GamepadKey"
            android:text="B" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_x"
            style="@style/GamepadKey"
            android:text="X" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_y"
            style="@style/GamepadKey"
            android:text="Y" />

    </GridLayout>

    <!-- 肩键/扳机 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="肩键/扳机"
        android:textSize="14sp"
        android:textColor="#49454F"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_lb"
            style="@style/GamepadKey"
            android:text="LB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_rb"
            style="@style/GamepadKey"
            android:text="RB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_lt"
            style="@style/GamepadKey"
            android:text="LT" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_rt"
            style="@style/GamepadKey"
            android:text="RT" />

    </GridLayout>

    <!-- 摇杆 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摇杆"
        android:textSize="14sp"
        android:textColor="#49454F"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_l3"
            style="@style/GamepadKey"
            android:text="L3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_r3"
            style="@style/GamepadKey"
            android:text="R3" />

    </GridLayout>

    <!-- 十字键 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="十字键"
        android:textSize="14sp"
        android:textColor="#49454F"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_dpad_up"
            style="@style/GamepadKey"
            android:text="D-Pad ↑" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_dpad_down"
            style="@style/GamepadKey"
            android:text="D-Pad ↓" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_dpad_left"
            style="@style/GamepadKey"
            android:text="D-Pad ←" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_dpad_right"
            style="@style/GamepadKey"
            android:text="D-Pad →" />

    </GridLayout>

    <!-- 系统 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统"
        android:textSize="14sp"
        android:textColor="#49454F"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_start"
            style="@style/GamepadKey"
            android:text="Start" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_back"
            style="@style/GamepadKey"
            android:text="Back" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/gamepad_guide"
            style="@style/GamepadKey"
            android:text="Guide" />

    </GridLayout>

</LinearLayout>
