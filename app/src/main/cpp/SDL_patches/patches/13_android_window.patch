+void Android_SetWindowPosition(_THIS, SDL_Window *window)
+{
+    /* Force window to always be at (0,0) - ignore any position change attempts */
+    __android_log_print(ANDROID_LOG_INFO, "SDL_Window", "馃敀 Android_SetWindowPosition called - forcing position (0,0)");
+
+    SDL_LockMutex(Android_ActivityMutex);
+
+    if (window == Android_Window) {
+        /* Always reset to origin */
+        window->x = 0;
+        window->y = 0;
+
+        __android_log_print(ANDROID_LOG_INFO, "SDL_Window", "鉁?Window position forced to (0,0)");
+    }
+
+    SDL_UnlockMutex(Android_ActivityMutex);
+}
