        <?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- BỎ android:enableOnBackInvokedCallback (API 33+) -->

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- VPN 权限 (EasyTier 联机功能) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE"
        tools:targetApi="34" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Android 10+ 所有文件访问权限 -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:targetApi="30" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO"
        tools:targetApi="33" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        tools:targetApi="33" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO"
        tools:targetApi="33" />
    <!-- 振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 前台服务权限 (Host & Play 服务器进程) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"
        tools:targetApi="34" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />
    <!-- gles 声明 -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <!-- Ép cho phép dùng module shared dù minSdk thấp hơn -->
    <uses-sdk tools:overrideLibrary="com.app.ralaunch.shared" />

    <application
        android:name=".RaLaunchApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.raLaunch"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        <!-- BỎ android:dataExtractionRules (API 31+) -->
        <!-- BỎ android:enableOnBackInvokedCallback (API 33+) -->

        <!-- 初始化 Activity - 应用启动入口 -->
        <activity
            android:name=".feature.init.InitializationActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|smallestScreenSize|uiMode"
            android:exported="true"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主活动 (纯 Compose 版本) -->
        <activity
            android:name=".feature.main.MainActivityCompose"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|smallestScreenSize|uiMode"
            android:exported="false"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".feature.game.legacy.GameActivity"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/GameTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustPan"
            android:process=":game">
            <meta-data android:name="SDL_ORIENTATION" android:value="Landscape" />
            <meta-data android:name="SDL_HINT_ORIENTATIONS" android:value="LandscapeLeft LandscapeRight" />
        </activity>

        <!-- 控制布局编辑器 -->
        <activity
            android:name=".feature.controls.editors.ControlEditorActivity"
            android:exported="false"
            android:label="@string/control_editor_activity_label"
            android:screenOrientation="sensorLandscape"
            android:launchMode="singleTop"
            android:theme="@style/Theme.raLaunch" />

        <!-- DocumentsProvider 唤醒活动 -->
        <activity
            android:name=".core.platform.android.provider.RaLaunchWakeUpActivity"
            android:exported="false"
            android:theme="@android:style/Theme.NoDisplay" />

        <!-- 崩溃报告活动 -->
        <activity
            android:name=".feature.crash.CrashReportActivity"
            android:exported="false"
            android:theme="@style/Theme.raLaunch"
            android:launchMode="singleTask"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|smallestScreenSize|uiMode" />

        <!-- 赞助商展示页面 -->
        <activity
            android:name=".feature.sponsor.SponsorsActivity"
            android:exported="false"
            android:theme="@style/Theme.raLaunch"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout|smallestScreenSize|uiMode" />

        <!-- 通用进程启动服务 -->
        <service
            android:name=".core.platform.android.ProcessLauncherService"
            android:process=":launcher"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            tools:targetApi="29" />

        <!-- EasyTier VPN 服务 -->
        <service
            android:name=".core.platform.network.easytier.EasyTierVpnService"
            android:process=":game"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            android:permission="android.permission.BIND_VPN_SERVICE"
            tools:targetApi="29">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <!-- BỎ <property> vì API 31+ mới có -->
        </service>

        <!-- RaLaunch 文件提供器 -->
        <provider
            android:name=".core.platform.android.provider.RaLaunchFileProvider"
            android:authorities="com.app.ralaunch.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- RaLaunch 文档提供器 -->
        <provider
            android:name=".core.platform.android.provider.RaLaunchDocumentsProvider"
            android:authorities="com.app.ralaunch.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENTS">
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
    </application>

</manifest>
