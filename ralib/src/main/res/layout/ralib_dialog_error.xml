<?xml version="1.0" encoding="utf-8"?>
<!-- 现代化错误弹窗布局 -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/errorCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="2dp"
    app:strokeColor="@color/ralib_error_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/ralib_bg_error_header">

            <ImageView
                android:id="@+id/ivErrorIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ralib_ic_error"
                android:tint="@color/ralib_error_color" />

            <TextView
                android:id="@+id/tvErrorTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="错误"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ralib_ic_close"
                android:background="@drawable/ralib_bg_circle"
                android:backgroundTint="#F0F0F0"
                android:contentDescription="关闭"
                android:tint="#757575" />

        </LinearLayout>

        <!-- 错误消息 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:padding="20dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发生了一个错误"
                android:textColor="#424242"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp" />

        </ScrollView>

        <!-- 堆栈跟踪容器 -->
        <LinearLayout
            android:id="@+id/stackTraceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="20dp"
            android:paddingTop="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="堆栈跟踪"
                android:textColor="#757575"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="150dp">

                    <TextView
                        android:id="@+id/tvStackTrace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:background="@drawable/ralib_bg_code"
                        android:padding="12dp" />

                </ScrollView>

            </HorizontalScrollView>

        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingTop="8dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopy"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复制"
                android:textColor="@color/accent_primary"
                app:icon="@drawable/ralib_ic_copy"
                app:iconTint="@color/accent_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="显示详情"
                android:textColor="@color/accent_primary"
                app:icon="@drawable/ralib_ic_expand_more"
                app:iconTint="@color/accent_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCustomAction"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="操作"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
